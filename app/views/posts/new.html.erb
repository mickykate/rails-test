<h3>新規登録</h3>

<%= render "shared/error", obj: @post %>
<%= form_with model: @post do |f| %>
    <table>
     <tr>
      <th><%= f.label :title , "タイトル" %></th>
      <td><%= f.text_field :title %></td>
     </tr>

     <tr>
      <th><%= f.label :start_date , "開始日" %></th>
      <td><%= f.datetime_field :start_date %></td>
     </tr>

     <tr>
      <th><%= f.label :end_date , "終了日" %></th>
      <td><%= f.datetime_field :end_date %></td>
     </tr>

     <tr>
      <th><%= f.label :is_all_day , "終日" %></th>
      <td><%= f.check_box :is_all_day %></td>
     </tr>

     <tr>
      <th><%= f.label :memo , "メモ" %></th>
      <td><%= f.text_area :memo %></td>
     </tr>

    <div>
     <ul>
      <li><%= f.submit "登録完了" %></li>
      <li><%= link_to "予定一覧に戻る", posts_path %></li>
     </ul>
    </div>
<% end %>

